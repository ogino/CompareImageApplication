<?xml version="1.0" encoding="utf-8"?>
<io.miyabi.image.compare.layout.ImageFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/image_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/before_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/before_image"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/before_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/before_image"
        android:textColor="@color/white"
        android:layout_gravity="end"/>

    <ImageView
        android:id="@+id/after_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/after_image"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/after_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/after_image"
        android:textColor="@color/white"
        android:layout_gravity="start"
        android:visibility="visible" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <SeekBar
            android:id="@+id/seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:max="10000"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            android:progress="5000"
            android:progressDrawable="@android:color/transparent"
            android:thumb="@drawable/boundary"
            android:visibility="gone" />
    </RelativeLayout>

</io.miyabi.image.compare.layout.ImageFrameLayout>